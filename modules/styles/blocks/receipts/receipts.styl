receipts_radius = 10px
receipts_cutaway_radius = 7px

.receipts
    // перенести стили на элемент родителя
    max-width 620px
    margin auto

    &__receipt
        position relative
        background radial-gradient(receipts_cutaway_radius at 0 0, #FFF 0%, #FFF receipts_cutaway_radius, rgba(255, 255, 255, 0) receipts_cutaway_radius + 1),
                   radial-gradient(receipts_cutaway_radius at 100% 0, #FFF 0%, #FFF receipts_cutaway_radius, rgba(255, 255, 255, 0) receipts_cutaway_radius + 1),
                   radial-gradient(receipts_cutaway_radius at 0 100% , #FFF 0%, #FFF receipts_cutaway_radius, rgba(255, 255, 255, 0) receipts_cutaway_radius + 1),
                   radial-gradient(receipts_cutaway_radius at 100% 100% , #FFF 0%, #FFF receipts_cutaway_radius, rgba(255, 255, 255, 0) receipts_cutaway_radius + 1),
                   url('blocks/receipts/receipts__bg.svg'),
                   #f9eebd
        padding 14px 61px 20px 23px

    &__receipt:first-child
        border-radius receipts_radius receipts_radius 0 0
        background radial-gradient(receipts_cutaway_radius at 0 100% , #FFF 0%, #FFF receipts_cutaway_radius, rgba(255, 255, 255, 0) receipts_cutaway_radius + 1),
                   radial-gradient(receipts_cutaway_radius at 100% 100% , #FFF 0%, #FFF receipts_cutaway_radius, rgba(255, 255, 255, 0) receipts_cutaway_radius + 1),
                   url('blocks/receipts/receipts__bg.svg'),
                   #f9eebd

    &__receipt::after
        font-size 18px
        line-height 18px

        position absolute
        left receipts_cutaway_radius
        right receipts_cutaway_radius
        top -9px
        z-index 9
        overflow hidden

        text-shadow 1px 0 1px rgba(0, 0, 0, .4)
        white-space nowrap

        color #fff

        content "････････････････････････････････････････････････････････････････････････････････････････"

    &__receipt:first-child::after
        display none

    &__receipt-body
        display table
        width 100%

    &__receipt-content,
    &__receipt-aside
        display table-cell

    &__receipt-aside
        display table-cell
        vertical-align top

    &__receipt-aside_center,
    &__receipt-content
        vertical-align middle

    &__receipt-content
        width 100%
        padding-right 15px

    &__type
        font-size 13px
        line-height 1.3
        color #b40000

    &__title,
    &__status
        font 700 18px/1 secondary_font
        margin-bottom 2px

    &__receipt-aside &__title
        font-size 21px
        line-height 21px
        vertical-align middle

    &__note
        font-size 13px

    &__status_ok
        color #4d906b

    &__price
        margin-top 15px

        white-space nowrap
        color #49916a

    &__price .price
        font 700 21px/21px secondary_font

    &__edit
        opacity 0

        font-size 18px
        font-weight normal
        line-height 21px

        margin 0 -35px 0 10px

        vertical-align middle

        text-decoration none !important
        color link_hover_color

        transition opacity 0.2s

    &__edit:after
        @extend $font-pencil

    &__receipt:hover &__edit
        opacity 1

    &__pay-method
        margin-top 11px
        width 136px
        height 37px
        background-position right
        background-repeat no-repeat

        &_webmoney
            background-image url('blocks/receipts/pay-logo-webmoney.svg')

        &_banksimple
            background-image url('blocks/receipts/pay-logo-banksimple.svg')

        &_interkassa
            background-image url('blocks/receipts/pay-logo-interkassa.svg')

        &_payanyway
            background-image url('blocks/receipts/pay-logo-payanyway.svg')

        &_paypal
            background-image url('blocks/receipts/pay-logo-paypal.svg')

        &_webmoney
            background-image url('blocks/receipts/pay-logo-webmoney.svg')

        &_yandexmoney
            background-image url('blocks/receipts/pay-logo-yandexmoney.svg')


    @media phone
        &__receipt-content,
        &__receipt-aside
            display block

        &__price
            margin-top 0

        &__receipt-aside
            margin-top 10px

        &__edit
            opacity 1

        &__title
            padding-right 10px

        &__pay-method
            background-position 0 0
