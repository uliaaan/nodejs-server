.course-info
    border-radius 4px
    line-height 1.3
    margin-top 22px
    background #f7f6ea
    position relative

    & &__header
        margin 0
        border-radius 4px 4px 0 0
        background #f0efe4
        padding 9px 50px 12px

    & &__header-title
        font 28px font
        font-weight bold
        //color secondary_color
        text-align center
        margin 0

    &__col
        border-left 1px solid separator_color

    &__col:first-child
        border 0

    &__content
        margin 20px 35px 35px

    &__title-note
        color #656565
        text-align center
        font-size 12px

    & .map
        position absolute
        top 8px
        right 20px
        cursor pointer
        color alternate_link_color
        font-size 14px
        vertical-align middle

    & &__title
        font 700 22px/1.2 font
        color color
        text-align center
        margin 0 0 25px
        padding 0

    & &__title_alternate
        color secondary_color

    &_program &__content
        text-align left

    &_program &__content ol li
        margin-top 10px

        color light_gray_color

    &_program &__content &__text
        color #333


    @media tablet
        &
            border-radius initial

            margin-left -10px
            margin-right -10px

        &_program
            background none


        &__body
            display flex
            flex-direction column

        & &__col
            display block
            width auto

            border: none

        & &__col:last-child
            border-top 1px solid separator_color

        &_program &__col:last-child
            order -1

            background #f7f6ea
            border none

        & .map__text
            display none

        &__content
            margin 20px 15px 35px
