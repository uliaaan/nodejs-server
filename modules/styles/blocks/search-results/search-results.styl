.search-results
    counter-reset result-item
    margin-top 22px

    &__result
        margin-bottom 20px
        margin-left 27px

    &__title
        font 21px/1 secondary_font
        counter-increment result-item
        position relative

    &__title::before
        content counter(result-item)
        position absolute
        right 100%
        min-width 22px
        padding-right 5px
        font-size 12px
        line-height 25px
        color #bbb

    &__count-note
        color #727272

    &__title-link
        color alternate_link_color

    &__extract
        margin 10px 0 3px

    & &__path
        margin 0
        padding 0
        color #49916a
        font-size 12px

    & &__path-step
        display inline-block
        margin 0 15px 0 0

    & &__path-step::before
        content "/"
        color inherit
        margin-left -9px

    & &__path-step:first-child::before
        display none

    &__path-link
        color inherit

    &__marked
        color inherit
        background #ffffb7
