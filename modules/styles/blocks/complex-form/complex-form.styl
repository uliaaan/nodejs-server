.complex-form
    max-width 780px
    margin auto

    &.login-form
        width auto

    &.login-form,
    & .login-form__form
        background none

    & .login-form__form
        padding 45px

        text-align left

    & .login-form__label
        color #666

    &.login-form &__step
        max-width 490px
        margin auto

    &__description
        max-width 500px
        margin 20px auto 40px
        font-size 14px
        line-height 19px
        color #20252B
        font-family 'Open Sans', Helvetica, Arial, sans-serif

    &__step
        @extend $yellow-border
        display none
        text-align center

    &__step-content
        margin 45px 80px

    &__step_current
        display block

    &__body
        padding 0 20px

    &__extract
        box-sizing border-box
        margin: 0 auto 17px

    & &__step-title,
    & &__alternate-title
        font 28px secondary_font
        margin 17px 0 11px

    & &__alternate-title
        position relative

        margin 25px 0 10px

        color #333

    &__amount
        width 177px

    &__email
        width 350px

    &__name
        display block
        margin auto
        width 290px

    &__email-note
        font-size 12px
        color #333
        margin 12px auto 0
        line-height 16px
        width 250px

    &__pay-method
        margin 20px auto 29px

    &[data-order-info-status="pending"] [data-order-form-step-payment]
        display none

    &__submit-line
        margin 50px 20px 30px 20px


    @media tablet
        &
            width auto

        &__step
            border none
            border-radius none

        & &__next
            display none

        &__alternate-title:first-child:before
            position absolute
            top -15px
            left 50%

            width 35px
            height 3px
            margin-left -17px

            background #F5F2F0

            content: ''

        &__email
            display block
            box-sizing border-box

            width auto
            max-width 615px
            margin 20px auto 0
            padding 0 23px

        &__email-note
            font-size 14px

            width auto
            max-width 615px
            padding 0 23px

        &__submit-line
            margin-top 30px


    @media phone
        &__extract
            padding-left 0
            padding-right 0

            margin-left -10px
            margin-right -10px

        &__email,
        &__email-note
            padding-left 0
            padding-right 0
