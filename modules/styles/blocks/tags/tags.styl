.tags
    padding: 0 10px
    margin: 10px 0

    ul
        text-align: center

    li 
        display: inline-block
        margin-right: 5px

    a
        text-decoration: none
        color: #fff  

    li:before
        display:none
    

    &__tag
        text-transform: uppercase
        background: #e13d91
        padding: 3px 10px


   &__tag:before 
        font-family: FontAwesome
        content: "\f000"
        display: inline-block
        padding: 0 8px 3px 0px
        font-size: 12px
        vertical-align: middle
 
   
