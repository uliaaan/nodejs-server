.inline-highlight
    position absolute
    pointer-events none
    line-height inherit
    white-space pre
    left 0
    top -2px
    z-index -1

    .mask
        background #F5E7C6
        outline 2px solid #F5E7C6

.block-highlight
    display block
    position absolute
    left 0
    right 0
    top -1px
    margin-top 1em /* Same as .prismâ€™s padding-top */

    pointer-events none

    line-height inherit
    white-space pre
    .mask
        display block
        background #F5E7C6
        outline 1px solid #F5E7C6
        left 0
        right 0
        position absolute
