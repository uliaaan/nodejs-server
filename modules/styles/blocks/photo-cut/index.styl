.photo-cut
    padding 25px 35px 35px 35px

    background #fff

    &__canvas
        user-select none
        outline none

    &__title
        font bold 28px/40px secondary_font

    &__layout
        margin-top 30px

        white-space nowrap

        border 2px solid #E0E0E0

    &__main
        display inline-block

        width 300px
        height 300px

        text-align center
        white-space normal

        background background_blocks

    &__canvas-wrapper
        position relative
        left -5px
        top -5px
        display inline-block

        vertical-align top


    &__rotate
        @extend $button-reset

        position absolute
        right 12px
        top: 10px

    &__rotate:after
        @extend $font-rotate-right

        font-size 12px
        font-weight bold
        line-height 12px

        color #fff
        opacity 0.8
        text-shadow 0px 0px 4px rgba(0,0,0,0.5)

    &__result
        display inline-block

        width 180px

        text-align center
        white-space normal
        vertical-align top

    &__selection-canvas
        border-radius 50%

        width 146px
        height 146px
        margin-top 50px

        box-shadow 0 0 1px rgba(0,0,0,0.1)

    &__selection-canvas_small
        width 36px
        height 36px
        margin-top 35px

    &__submit
        margin-top 36px

    &__submit .button
        margin-right 25px

    & a&__close-link
        display inline
