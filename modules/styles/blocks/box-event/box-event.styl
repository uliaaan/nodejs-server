.box-event
    position: relative;
    display block
    margin-top 40px

    &__item
        display: inline-block
        width: 200px
        height: 200px
        margin: 4px 4px
        vertical-align: top
        position: relative
        text-decoration none !important

    &__item:before
        display:none

    img
        width: 200px
        height: 200px
        -webkit-box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.5)
        -moz-box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.5)
        box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.5)    

    &__backgroupColor
        position: absolute
        background: #000
        width: 100%
        height: 100%
        top: 0
        opacity: 0.7

    &__date
        position: absolute;
        top: 0
        height: 15%
        width: 100%


    &__title
        position: absolute
        top: 15%
        width: 100%
        height: 70%
        font-weight: bold

    &__title p
        padding: 0 15px
        font-size: 22px
        text-transform: uppercase
        color: #fff

    &__place        
        position: absolute
        bottom: 0
        height: 15%
        width: 100%
        background: #e13d91