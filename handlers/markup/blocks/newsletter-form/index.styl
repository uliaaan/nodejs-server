.newsletter-form
  border 4px solid #F2E7B3
  border-radius 10px
  padding 40px 50px
  margin 0 auto
  box-sizing border-box

  +below('small-tablet')
    padding-left 30px
    padding-right 30px

  &__field
    margin-bottom 20px

  &__button
    margin-right 10px
    display inline-block
    vertical-align middle

    +below('phone')
      display block
      margin-right 0
      margin-bottom 10px

  &__delete
    margin-left 20px
    color color_red

    +below('phone')
      margin-left 0

  &__label
    display flex
    justify-content space-between
    align-items center

  &__line
    display flex
    flex-wrap wrap
    justify-content space-between
    align-items center

    +below('phone')
      display block

  &__group
    margin-top 10px
    width 100%
    display flex
    align-items center
    flex-wrap wrap

    &:first-of-type
      margin-top 20px

    +below('phone')
      display block

  &__group + &__link
    text-align left

  &__remove
    width auto
    color color_black
    transition color .3s ease
    margin-left 10px
    margin-right 10px
    margin-bottom 10px
    width 13px

    &::after
      @extend $font-trash

    &:hover
      text-decoration none
      color code_color

  &__select
    width calc(100% - 220px)

    +below('phone')
      width 100%

    &_middle
      width auto
      flex-grow 3
      margin-bottom 10px

      +below('phone')
        width calc(100% - 33px)

    &_small
      margin-right 10px
      margin-bottom 10px
      width auto
      flex-grow 1

      +below('phone')
        width 100%
        margin-right 0

  &__link
    font-size 14px

    &_preview
      &::after
        @extend $font-external
        margin-left 5px

  &__textarea
    min-height 314px

  &__preview
    margin-bottom 30px

  &__preview-link
    color navigation_link_color
    font-size 14px
    margin-bottom 15px
    cursor pointer
    user-select none
    display inline-block

    &::after
      @extend $font-open
      transform rotate(180deg)
      display inline-block
      margin-left 5px
      font-size 16px
      transition transform .3s ease
      vertical-align middle

    &_active
      &::after
        transform rotate(0deg)

  &__preview-content
    font-size 14px
    line-height 19px
    border-top 1px solid background_light
    height 0
    overflow hidden
    box-sizing border-box

    p
      margin-top 0

      &:last-child
        margin-bottom 0

    &_active
      height auto
      padding-top 15px
      padding-bottom 15px
      border-bottom 1px solid background_light
