$courses-reviews = '.courses-reviews';

.courses-reviews
  &__title
    text-align center

  &__slider
    position relative
    text-align center

  &__slides-wrapper
    overflow hidden
    margin 0 auto
    width 85%

  &__control
    position absolute
    width 7.5%
    top 0
    bottom 40px
    opacity 1
    transition opacity .2s ease
    cursor pointer

    &_hidden
      opacity 0
      visibility hidden

    &_left
      left 0

      &:hover
        {$courses-reviews}
          &__control-button
            &_left
              border-right-color light_gray_color

    &_right
      right 0

      &:hover
        {$courses-reviews}
          &__control-button
            &_right
              border-left-color light_gray_color

  &__control-button
    position absolute
    border-top 19px solid transparent
    border-bottom 19px solid transparent
    height 0
    width 0
    top 0
    bottom 0
    left 0
    right 0
    margin auto

    &_left
      border-left none
      border-right 27px solid #ececec

    &_right
      border-right none
      border-left 27px solid #ececec

  ul&__pagination
    padding 0
    margin 20px auto 0

  ul > li&__page
    display inline-block
    vertical-align top
    margin-right 8px
    background-color #ececec
    border-radius 50%
    width 12px
    height 12px
    cursor pointer

    &:last-child
      margin-right 0

    &:before
      display none

    &:hover
    &_active
      background-color light_gray_color
