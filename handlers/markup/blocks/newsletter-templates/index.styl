.newsletter-templates
  &__content
    border 4px solid background_blocks
    text-align center
    border-radius 3px
    counter-reset templates-list

  &__button
    margin-top 25px
    margin-bottom 25px

  &__item
    text-align left
    counter-increment template-list
    display flex
    align-items center
    padding-top 16px
    padding-bottom 16px
    padding-right 10px
    border-bottom 1px solid #E4DDD2
    transition background-color .3s ease

    &::before
      content counter(template-list)
      display inline-block
      width 42px
      text-align center
      font-weight bold
      font-family secondary_font
      flex-shrink 0
      color #959595

    &:hover
      background-color rgba(background_blocks, 0.5)
      text-decoration none
      color alternate_link_color

    &:last-child
      border-bottom 0
